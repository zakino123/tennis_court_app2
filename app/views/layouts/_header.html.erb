<header class="bg-green-100">
  <div class="container py-1">
    <div class="mx-auto">
      <div class="text-center mb-3 md:mb-0  lg:flex">
        <%= link_to "Tennis court search", root_path, class: "my-auto fs-1 text-info title-font" %>
        <nav class="mt-3 text-base sm:text-xl md:text-2xl">
          <%= link_to "ホーム", root_path, class: "ml-2 m-2 hover:text-blue-400" %>
          <% if logged_in? %>
            <%= link_to "マイページ", current_user, class: "m-1 hover:text-blue-400" %>
            <%= link_to "コート投稿", new_court_path, class: "m-1 hover:text-blue-400" %>
            <%= link_to "ユーザー一覧", users_path, class: "m-1 hover:text-blue-400" %>
            <%= link_to "ログアウト", logout_path, method: :delete, class: "m-1 hover:text-blue-400" %>
          <% else %>
            <%= link_to "ゲストログイン", guest_login_path, method: :post, class: "m-1 hover:text-blue-400" %>
            <%= link_to "ログイン", login_path, class: "m-1 hover:text-blue-400" %>
            <%= link_to "新規登録", user_create_path, class: "m-1 hover:text-blue-400" %>
          <% end %>
        </nav>
      </div>
    </div>
  </div>
</header>