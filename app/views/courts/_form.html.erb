<%= form_with(model: @court, local: true) do |f| %>
  <%= render 'shared/court_error_messages' %>

  <%= f.label :image, "施設画像" %>
  <% if @court.image? %>
    <%= image_tag @court.image.url %>
  <% else %>
    <%= image_tag "/assets/default.jpeg", :size => '100x100' %>
  <% end %>
  <%= f.file_field :image, class: "btn btn-outline-secondary rounded-pill", accept: 'image/jpeg,image/gif,image/png' %>

  <%= f.label :name, "施設名(テニスコート名)" %>
  <%= f.text_field :name, class: "mb-3 form-control", placeholder: '施設名を入力してください。' %>

  <%= f.label :address, "住所" %>
  <%= f.text_field :address, class: "mb-3 form-control", placeholder: '住所を入力してください。' %>

  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>

  <%= f.label :price, "1時間あたりの料金" %>
  <%= f.number_field :price, class: "mb-3 form-control", placeholder: '料金を入力してください。' %>

  <%= f.label :number, "コート数" %>
  <%= f.number_field :number, class: "mb-3 form-control", placeholder: 'コート数を入力してください。' %>

  <%= f.label :remarks, "備考" %>
  <%= f.text_field :remarks, class: "mb-3 form-control", placeholder: '他に何かあればご記入下さい。' %>

  <%= f.submit yield(:button_text), class: "mt-3 mb-3 btn btn-primary" %>
<% end %>