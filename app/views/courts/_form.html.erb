<%= form_with(model: @court, local: true) do |f| %>
  <%= render 'shared/court_error_messages' %>

  <%= f.label :image, "施設画像", {class: "text-lg font-bold"} %>
  <% if @court.image? %>
    <%= image_tag @court.image.url, size: '150x150', class: 'border-2' %>
  <% else %>
    <%= image_tag "/assets/default.jpeg", size: '150x150', class: 'border-2' %>
  <% end %>
  <%= f.file_field :image, class: "btn my-2 btn-outline-secondary rounded-pill", accept: 'image/jpeg,image/gif,image/png' %>

  <%= f.label :name, "施設名(テニスコート名)", {class: "text-lg font-bold"} %>
  <%= f.text_field :name, class: "mb-3 form-control", placeholder: '施設名を入力してください。' %>

  <%= f.label :address, "住所", {class: "text-lg font-bold"} %>
  <%= f.text_field :address, class: "mb-3 form-control", placeholder: '住所を入力してください。' %>

  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>

  <%= f.label :price, "1時間あたりの料金", {class: "text-lg font-bold"} %>
  <%= f.number_field :price, class: "mb-3 form-control", placeholder: '数字を入力してください。' %>

  <%= f.label :number, "コート数", {class: "text-lg font-bold"} %>
  <%= f.number_field :number, class: "mb-3 form-control", placeholder: 'コート数を入力してください。' %>

  <%= f.label :reserve, "予約URL", {class: "text-lg font-bold"} %>
  <%= f.text_field :reserve, class: "mb-3 form-control", placeholder: '予約URLを貼り付けてください。' %>

  <%= f.label :remarks, "備考", {class: "text-lg font-bold"} %>
  <%= f.text_field :remarks, class: "mb-3 form-control", placeholder: '他に何かあればご記入下さい。' %>

  <div class="text-center my-4">
    <%= f.submit yield(:button_text), class: "inline-block text-gray-100 bg-teal-500 border border-yellow-500 hover:text-teal-500 hover:bg-white font-base px-4 py-2 rounded text-base" %>
  </div>
<% end %>