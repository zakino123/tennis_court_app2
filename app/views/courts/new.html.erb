<h1>コート投稿</h1>

<div class="mb-3">
  <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'shared/court_error_messages' %>

    <%= f.label :name, "施設名(テニスコート名)" %>
    <%= f.text_field :name, class: "mb-3 form-control", placeholder: '施設名を入力してください。' %>

    <%= f.label :address, "住所" %>
    <%= f.email_field :address, class: "mb-3 form-control", placeholder: '住所を入力してください。' %>

    <%= f.submit "コートを投稿する", class: "mt-3 btn btn-primary" %>
  <% end %>
</div>