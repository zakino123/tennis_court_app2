<h1>施設情報</H1>
<div class="container">
  <div class="">
    <h2>施設名：<%= @court.name %></h2>
    <% if current_user.id == @court.user.id or current_user.admin %>
      <%= link_to "コート情報変更", edit_court_path(@court), class: "p-4 fs-3 text-dark" %>
    <% end %>
  </div>
  <%= image_tag @court.image.url %>
  <div class="">
    <h3>コート情報
    <div class="">
      <h3><%= @court.address %></h3>
    </div>
    <div class="">
      <h3>料金</h3>
    </div>
    <div class="">
      <h3>予約url</h3>
    </div>
    <div class="">
      <h3>コート数</h3>
    </div>
  </div>

  <div class="">
    <h2>コメント<h2>
    <ul>
      <li>コメント1</li>
      <li>コメント2</li>
      <li>コメント3</li>
    </ul>
  </div>
</div>
