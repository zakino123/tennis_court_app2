<div class="grid lg:grid-cols-4">
  <div class="user-info col-span-1 container mx-auto my-auto w-64">
    <div class="user-image justify-items-center mt-6 w-64 justify-center">
      <% if @user.image? %>
        <%= image_tag @user.image.url, :size => '200x200', class: "inline-block w-full h-40 mx-auto items-start" %>
      <% else %>
        <%= image_tag "/assets/default.jpeg", :size => '200x200', class: "inline-block w-full h-40 mx-auto items-start" %>
      <% end %>
      <div class="text-center text-gray-700 text-xl font-bold mt-3">
        <%= @user.name %>さんのマイページ
      </div>
      <% if current_user == @user %>
        <div class="text-center my-2">
          <%= link_to 'ユーザー情報編集', edit_user_path(current_user), class: "inline-block text-gray-100 bg-green-500 border border-yellow-500 hover:text-green-500 hover:bg-white font-base px-4 py-2 rounded text-base" %>
        </div>
        <%# <%= link_to "ユーザー情報変更", edit_user_path(current_user), class: "p-4 fs-3 text-dark" %>
      <% end %>
    </div>
  </div>
  <div class="posts-info lg:col-span-3 mb-4 lg:mt-4">
    <div classe="">
      <h2 class="text-lg text-center font-bold mb-2">お気に入りコート</h2>
      <div class="flex justify-center space-x-5 xl:space-x-32">
        <% if @favorites.present? %>
          <% @favorites.each do |favorite| %>
            <li class="bg-green-100 hover:bg-white  border-2 border-gray-300 px-4 pt-2 list-none hover:shadow court-card">
              <% if favorite.image? %>
                <%= link_to image_tag(favorite.image.url), favorite, size: "200x200" %>
              <% else %>
                <%= link_to image_tag("/assets/default.jpeg"), favorite, size: "200x200" %>
              <% end %>
              <div class="text-center">
                <p class="font-bold underline mt-2"><%= link_to favorite.name, court_path(favorite), class: "hover:text-green-600"%></p>
                <p class="text-xl h-6 mt-1">料金：<%= favorite.price %>円/時間</p>
                <div class="mt-2">
                  <span><i class="fas fa-star fa-lg fill-current text-yellow-500"></i><%= favorite.favorites.count %></span>
                  <span class="font-bold underline ml-6"><i class="far fa-user mr-2"></i><%= link_to favorite.user.name, user_path(favorite.user), class: "hover:text-green-600" %></span>
                  <p class="text-xl h-6 mt-1">コート数：<%= favorite.number %>面</p>
                </div>
              </div>
            </li>
          <% end %>
        <% else %>
          <p class="text-lg sm:text-2xl">お気に入り登録したコートはありません。</p>
        <% end %>
      </div>
    </div>
    <div classe="">
      <h2 class="text-lg text-center font-bold my-2">投稿したコート</h2>
      <div class="flex justify-center space-x-5 xl:space-x-32">
        <% if @courts.present? %>
          <% @courts.each do |court| %>
            <li class="bg-green-100 hover:bg-white border-2 border-gray-300 px-4 pt-2 list-none hover:shadow court-card">
              <% if court.image? %>
                <%= link_to image_tag(court.image.url), court, size: "200x200" %>
              <% else %>
                <%= link_to image_tag("/assets/default.jpeg"), court, size: "200x200" %>
              <% end %>
              <div class="text-center">
                <p class="font-bold underline mt-2"><%= link_to court.name, court_path(court), class: "hover:text-green-600"%></p>
                <p class="text-xl h-6 mt-1">料金：<%= court.price %>円/時間</p>
                <div class="mt-2">
                  <span><i class="fas fa-star fa-lg fill-current text-yellow-500"></i><%= court.favorites.count %></span>
                  <span class="font-bold underline ml-6"><i class="far fa-user mr-2"></i><%= link_to court.user.name, user_path(court.user), class: "hover:text-green-600" %></span>
                  <p class="text-xl h-6 mt-1">コート数：<%= court.number %>面</p>
                </div>
              </div>
            </li>
          <% end %>
        <% else %>
          <p class="text-lg sm:text-2xl">投稿したコートはありません。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>