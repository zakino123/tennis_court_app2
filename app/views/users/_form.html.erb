<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :image, "プロフィール画像", {class: "text-lg font-bold"} %>
  <% if @user.image? %>
    <%= image_tag @user.image.url, size: '150x150', class: 'border-2' %>
  <% else %>
    <%= image_tag "/assets/default.jpeg", size: '150x150', class: 'border-2' %>
  <% end %>
  <%= f.file_field :image, class: "btn my-2 btn-outline-secondary rounded-pill", accept: 'image/jpeg,image/gif,image/png' %>

  <%= f.label :name, "ニックネーム", {class: "text-lg font-bold"} %>
  <%= f.text_field :name, class: "mb-4 form-control", placeholder: '30文字以内で入力してください。' %>

  <%= f.label :email, "メールアドレス", {class: "text-lg font-bold"} %>
  <%= f.email_field :email, class: "form-control mb-4", placeholder: 'メールアドレスを入力してください。' %>

  <%= f.label :password, "パスワード", {class: "text-lg font-bold"} %>
  <%= f.password_field :password, class: "mb-4 form-control", placeholder: '半角英数字6文字以上' %>

  <%= f.label :password_confirmation, "パスワード(確認用)", {class: "text-lg font-bold"} %>
  <%= f.password_field :password_confirmation, class: "form-control mb-4", placeholder: '半角英数字6文字以上' %>

  <div class="text-center my-4">
    <%= f.submit yield(:button_text), class: "inline-block text-gray-100 bg-teal-500 border border-yellow-500 hover:text-teal-500 hover:bg-white font-base px-4 py-2 rounded text-base" %>
  </div>
<% end %>