<h1>新規登録</h1>
<form>
  <div class="mb-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "ニックネーム" %>
      <%= f.text_field :name, class: "mb-3 form-control", placeholder: '30文字以内で入力してください。' %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "mb-3 form-control", placeholder: 'メールアドレスを入力してください。' %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "mb-3 form-control", placeholder: '半角英数字6文字以上' %>

      <%= f.label :password_confirmation, "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: '半角英数字6文字以上' %>

      <%= f.submit "新規登録", class: "mt-3 btn btn-primary" %>
    <% end %>
  </div>
</form>