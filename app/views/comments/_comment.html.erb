<li id="comment-<%= comment.id %>">
  <% if comment.user.image? %>
    <%= image_tag comment.user.image.url %>
  <% else %>
    <%= image_tag "/assets/default.jpeg", :size => '100x100' %>
  <% end %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content"><%= comment.context %></span>
  <span class="timestamp">
    <%= time_ago_in_words(comment.created_at) %> 前に投稿
  </span>
</li>