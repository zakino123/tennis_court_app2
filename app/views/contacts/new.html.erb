<h1>お問合せフォーム</h1>

<%= form_with(model: @contact, local: true) do |f| %>
  <%= render 'shared/contact_error_messages' %>

  <%= f.label :name, "名前" %>
  <%= f.text_field :name, class: "mb-3 form-control", placeholder: '名前を入力してください。' %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email, class: "mb-3 form-control", placeholder: 'メールアドレスを入力してください。' %>

  <%= f.label :message, "お問合せ内容" %>
  <%= f.text_field :message, class: "mb-3 form-control", placeholder: '内容をご記入お願いします。' %>

  <%= f.submit "送信", class: "mt-3 mb-3 btn btn-primary" %>
<% end %>